<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Summary:</strong>
    <%= article.summary %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>

  <p>
    <strong>Sources:</strong>
    <%= article.sources %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= article.category_id %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= article.image %>
  </p>

  <p>
    <strong>Sentiment score:</strong>
    <%= article.sentiment_score %>
  </p>

</div>
